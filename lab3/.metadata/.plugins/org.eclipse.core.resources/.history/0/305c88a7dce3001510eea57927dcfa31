#include "IP_layer.h"
#include "helper.h"

// Takes a full IPFrame struct and stores it into
// output, ready for transmission.
int IPPack(IPFrame* frame, unsigned char* output)
{
    int s = 0;
    
    charncat(output, frame->version, &s, 4);
    charncat(output, frame->headerLength, &s, 4);
    charncat(output, frame->packetLength, &s, 16);
    charncat(output, frame->identification, &s, 16);
    charncat(output, frame->checksum, &s, 16);
    charncat(output, frame->src_addr, &s, 32);
    charncat(output, 
}
