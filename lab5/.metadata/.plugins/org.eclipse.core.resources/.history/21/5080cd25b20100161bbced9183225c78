#ifndef HELLO_LED_H
#define HELLO_LED_H

#define CAN_MASTER 1  // Define 1 if using 2 boards, 0 if using 1 board
#define MASTER      // Define if board is master

#define MAC_1   {0x5D, 0x82, 0xD2, 0xEA, 0x03, 0x69}
#define IP_1    {192, 168, 1, 116}
#define PORT_1  20451

#define MAC_2   {0x0D, 0xAE, 0xDC, 0xE2, 0xC6, 0x75}
#define IP_2    {192, 168, 1, 112}
#define PORT_2  1115

#if CAN_MASTER == 0

#ifdef MASTER

#define LOCAL_MAC MAC_1
#define LOCAL_IP_ADDR IP_1
#define LOCAL_PORT PORT_1

#define DEST_MAC MAC_2
#define DEST_IP IP_2
#define DEST_PORT PORT_2

#else /*MASTER*/

#define LOCAL_MAC MAC_2
#define LOCAL_IP IP_2
#define LOCAL_PORT PORT_2

#define DEST_MAC MAC_1
#define DEST_IP IP_1
#define DEST_PORT PORT_1

#endif /*MASTER*/

#else /*CAN_MASTER*/

#define LOCAL_MAC MAC_1
#define LOCAL_IP_ADDR IP_1
#define LOCAL_PORT PORT_1

#define DEST_MAC MAC_1
#define DEST_IP IP_1
#define DEST_PORT PORT_1

#endif /*CAN_MASTER*/

#endif /*HELLO_LED_H*/
