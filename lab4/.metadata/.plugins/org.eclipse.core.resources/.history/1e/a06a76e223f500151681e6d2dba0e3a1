#include "queue.h"

void push(Queue* queue, char* item, int length) {
    if (!isFull(queue)) {
        queue->items[queue->queuePointer] = item;
        queue->lengths[queue->queuePointer] = length;
        queue->queuePointer++;
    }
}

int pop(Queue* queue, char* item) {
    if (!isEmpty(queue)) {
        queue->queuePointer--;
        item = queue->items[queue->queuePointer];
        return queue->lengths[queue->queuePointer];
    }
    return -1;
}

int isEmpty(Queue* queue) {
    return queue->pointer == 0;
}

int isFull(Queue* queue) {
    return queue->pointer == QLENGTH;
}
