#ifndef UDP_H
#define UDP_H

#include "basic_io.h"
#include "helper.h"
#include "layers/ethernet_layer.h"
#include "layers/IP_layer.h"
#include "layers/UDP_layer.h"

typedef struct
{
    char* localIP;
    int localPort;
    char* localMAC;
    
    char* destIP;
    int destPort;
    char* destMAC;   
} EthernetInfo;


void udpSend(
    char* data, int valueSize, 
    EthernetInfo* info);
    
int udpDecode(char* data, 
    int dataLength, 
    char* returnedData, 
    EthernetInfo* info);

#endif /*UDP_H*/
