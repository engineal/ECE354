#ifndef ETHERNET_H_
#define ETHERNET_H_

#include "basic_io.h"
#include "helper.h"
#include "ethernet_layer.h"
#include "IP_layer.h"
#include "UDP_layer.h"


#define MSG_ACK            0b10101010
#define MSG_NAK            0b11111111
#define MSG_GET_IMAGE      0b00000000
#define MSG_TRANSMIT_IMAGE 0b00000001
#define MSG_IMAGE_PROC_1   0b00000010
#define MSG_IMAGE_PROC_2   0b00000011
#define MSG_IMAGE_PROC_3   0b00000100
#define MSG_IMAGE_PROC_4   0b00000101
#define MSG_IMAGE_PROC_5   0b00000110
#define MSG_IMAGE_PROC_6   0b00000111


void encode_message(
    char* data, int valueSize, 
    int port, int destPort, 
    char* destIP, char* ip_addr, 
    char* destMAC, char* ether_addr);
int decode_message(char* data, int dataLength, char* returnedData, int port, char* ip_addr, char* ether_addr);

#endif /*ETHERNET_H_*/
