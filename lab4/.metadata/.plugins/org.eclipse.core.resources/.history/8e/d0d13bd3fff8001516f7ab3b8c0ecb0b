#ifndef UDP_H
#define UDP_H

#define UDP_LENGTH       ETHERNET_DATA_LENGTH
#define UDP_DATA_LENGTH  (IP_LENGTH-IP_HEADER_LENGTH)

typedef struct
{
    char* localIP;
    int localPort;
    char* localMAC;
    
    char* destIP;
    int destPort;
    char* destMAC;   
} UDPInfo;

void udpSend(char*, int, UDPInfo*);
int udpReceive(char*, UDPInfo*);

#endif /*UDP_H*/
